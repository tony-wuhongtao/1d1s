        </div>
    </footer>
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('theme://libs/javascript/vendors/jquery-2.1.3.min.js', 100) %}
    {% do assets.addJs('theme://libs/javascript/vendors/bootstrap.min.js', 98) %}
    {% do assets.addJs('theme://libs/javascript/vendors/materialize.min.js', 97) %}
    {% do assets.addJs('theme://libs/javascript/vendors/markerwithlabel.min.js', 96) %}
    {% do assets.addJs('theme://libs/javascript/vendors/retina.min.js', 95) %}
    {% do assets.addJs('theme://libs/javascript/vendors/scrollreveal.min.js', 94) %}
    {% do assets.addJs('theme://libs/javascript/vendors/swiper.jquery.min.js', 93) %}
    {% do assets.addJs('theme://libs/javascript/vendors/jquery.magnific-popup.min.js', 92) %}
    {% do assets.addJs('theme://libs/javascript/custom.js', 91) %}

{% endblock %}

{{ assets.js() }}

</body>
</html>
