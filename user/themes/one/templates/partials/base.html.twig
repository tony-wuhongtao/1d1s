{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://libs/images/site/fav-icon.png') }}" />
    <!--APPLE TOUCH ICON-->
    <link rel="apple-touch-icon" href="{{ url('theme://libs/images/site/apple-touch-icon.png') }}" >

    <link rel="canonical" href="{{ page.url(true, true) }}" />



    {% block stylesheets %}
        <!-- GOOGLE FONT -->
        <link href='https://fonts.googleapis.com/css?family=Raleway:500' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css'>


        <!-- MATERIAL ICON FONT -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- FONT AWESOME -->
        {% do assets.addCss('theme://libs/stylesheets/vendors/font-awesome.min.css',97) %}
        <!-- ANIMATION -->
        {% do assets.addCss('theme://libs/stylesheets/vendors/animate.min.css',96) %}
        <!-- MAGNIFICENT POPUP -->
        {% do assets.addCss('theme://libs/stylesheets/vendors/magnific-popup.css',95) %}
        <!-- SWIPER -->
        {% do assets.addCss('theme://libs/stylesheets/vendors/swiper.min.css',94) %}
        <!-- MATERIALIZE -->
        {% do assets.addCss('theme://libs/stylesheets/vendors/materialize.css',93) %}
        <!-- BOOTSTRAP -->
        {% do assets.addCss('theme://libs/stylesheets/vendors/bootstrap.min.css',92) %}
        <!-- CUSTOM STYLE IN THEME -->
        {# {% set color = random(['_blue', '_blue_blend', '_brown', '_dark_dark', '_dark_gary', '_gary', '_green', '_green_blend', '_pink', '_purple', '_red', '_teal']) %} #}
        {% do assets.addCss('theme://libs/stylesheets/style.css',91) %}
        {# {% do assets.addCss('theme://libs/stylesheets/style_dark_dark.css',91) %}#}
        {# {% do assets.addCss('theme://libs/stylesheets/style'~ color ~'.css',91) %} #}
        <!-- CUSTOM STYLE IN GRAV-->
        {% do assets.addCss('theme://css/custom.css',90) %}

    {% endblock %}
    {{ assets.css() }}

{% endblock head%}
</head>
<body id="top" class="{{ page.header.body_classes }}">

<!--==========================================
                  PRE-LOADER
===========================================-->
<div id="loading">
    <div id="loading-center">
        <div id="loading-center-absolute">
            <div class="box-holder animated bounceInDown">
                <span class="load-box"><span class="box-inner"></span></span>
            </div>
            <!-- NAME & STATUS -->
            <div class="text-holder text-center">
                <h2>一天一条</h2>
                <h6>One Day One Story</h6>
            </div>
        </div>
    </div>
</div>



{% block header %}
<!--==========================================
                    HEADER
===========================================-->
    <header id="home">
        {% block header_navigation %}
        {% include 'partials/navigation.html.twig' %}
        {% endblock %}


        <!--HEADER BACKGROUND-->
        <div class="header-background section"></div>

    </header>
{% endblock %}

{% block body %}
    {% block content %}{% endblock %}
{% endblock %}

<!--==========================================
                     SCROLL TO TOP
===========================================-->
<div id="scroll-top">
    <div id="scrollup"><i class="fa fa-angle-up"></i></div>
</div>

