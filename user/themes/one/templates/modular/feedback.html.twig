<!--==========================================
                   FEEDBACK
===========================================-->
<section id="feedback" class="section">
    <div class="container">
        <!-- SECTION TITLE -->
        <div class="section-title">
            <h4 class="text-uppercase text-center"><img src="{{ theme_url }}/libs/images/icons/bubbles-alt.png" alt="demo">播出反馈</h4>
        </div>

        <div id="timeline-education">
            <!-- Feadback Items -->
            {% for item in header.feedbacks %}
                {% set style = item.style %}

                {% if style == 's1' %}
                <!-- Report with big image -->
                <!-- BIG IMAGE REPORT-->
                <div class="timeline-block">
                    <!-- DOT -->
                    <div class="timeline-dot">
                    {% if item.use_default_icon == 0 %}
                         
                        {% if item.use_custom_icon == 1 and item.custom_icon %}    
                            <i class="fa fa-{{ item.custom_icon }}"></i> 
                        {% elseif item.letter %}
                            <h6>{{ item.letter }}</h6>
                        {% endif %}
                    {% else %}
                        <i class="fa fa-commenting"></i>
                    {% endif %}
                    </div>
                    <!-- TIMELINE CONTENT -->
                    <div class="card timeline-content">
                        <div class="card-content">
                            <!-- TIMELINE TITLE -->
                            <h6 class="timeline-title">{{ item.title }}<a href="#" class="modal-dot" data-toggle="modal" data-target="#myModal-{{ loop.index }}">
                                <i class="fa fa-picture-o" aria-hidden="true"></i>
                            </a></h6>
                            <!-- TIMELINE TITLE INFO -->
                            <div class="timeline-info">
                                <h6>
                                    <small>{{ item.sub_title }}</small>
                                </h6>
                            </div>
                            {% set big_img = item.big_image|first %}
                            <img class="feedback-image"  src="{{ big_img.path }}">
                            <div class="clearfix"></div>
                            
                        </div>
                    </div>
                </div>  

                {% endif %}

                {% if style == 's2' %}
                <!-- Report with small image -->
                <!-- SMALL IMAGE REPORT -->
                <div class="timeline-block">
                    <!-- DOT -->
                    <div class="timeline-dot">
                    {% if item.use_default_icon == 0 %}
                         
                        {% if item.use_custom_icon == 1 and item.custom_icon %}    
                            <i class="fa fa-{{ item.custom_icon }}"></i> 
                        {% elseif item.letter %}
                            <h6>{{ item.letter }}</h6>
                        {% endif %}
                    {% else %}
                        <i class="fa fa-commenting"></i>
                    {% endif %}
                    </div>
                    <!-- TIMELINE CONTENT -->
                    <div class="card timeline-content">
                        <div class="card-content">
                            <div class="col-md-7 noPaddingLeft">
                                <!-- TIMELINE TITLE -->
                                <h6 class="timeline-title">{{ item.title }}</h6>
                                <!-- TIMELINE TITLE INFO -->
                                <div class="timeline-info">
                                    <h6>
                                        <small>{{ item.sub_title }}</small>
                                    </h6>
                                    <a href="#" class="modal-dot" data-toggle="modal" data-target="#myModal-{{ loop.index }}">
                                        <i class="fa fa-picture-o" aria-hidden="true"></i>
                                    </a>
                                </div>
                                <!-- TIMELINE PARAGRAPH -->
                                <!-- <p>
                                报道的具体内容
                                </p> -->
                            </div>
                            <div class="col-md-5 noPaddingLeft">
                                {% set small_img = item.small_image|first %}
                                <img class="feedback-image"  src="{{ small_img.path }}">
                            </div>
                            <div class="clearfix"></div>
                            
                        </div>
                    </div>
                </div>    

                {% endif %}
                
                {% if style == 's3' %}
                        <!-- Comment with photo -->
                <!-- COMMENT WITH PHOTO -->
                <div class="timeline-block">
                    <!-- DOT -->
                    <div class="timeline-dot">
                    {% if item.use_default_icon == 0 %}
                         
                        {% if item.use_custom_icon == 1 and item.custom_icon %}    
                            <i class="fa fa-{{ item.custom_icon }}"></i> 
                        {% elseif item.letter %}
                            <h6>{{ item.letter }}</h6>
                        {% endif %}
                    {% else %}
                        <i class="fa fa-commenting"></i>
                    {% endif %}
                    </div>
                    <!-- TIMELINE CONTENT -->
                    <div class="card timeline-content">
                        <div class="col-md-2 noPaddingRight">
                            {% set photo = item.comment_photo|first %}
                            <img class="author-portfolio" src="{{ photo.path }}">
                            
                        </div>
                        <div class="col-md-10 noPaddingLeft">
                            <div class="card-content">
                                {{ item.comment_content }}
                                <div class="timeline-info author-info">
                                    <h6 class="author-name">
                                        <small>{{ item.comment_title }}</small>
                                    </h6>
                                    <h6>
                                        <small><span>{{ item.comment_sub_title }}</span></small>
                                    </h6>
                                </div>
                                <!-- TIMELINE TITLE -->
                                <!-- <h6 class="timeline-title">High School</h6> -->
                                <!-- TIMELINE PARAGRAPH -->
                                
                            </div>
                        </div>
                    </div>
                </div>    

                    {% endif %}
                    {% if style == 's4' %}
                        <!-- Just Comment -->
                <!-- JUST COMMENT -->
                <div class="timeline-block">
                    <!-- DOT -->
                    <div class="timeline-dot">
                    {% if item.use_default_icon == 0 %}
                         
                        {% if item.use_custom_icon == 1 and item.custom_icon %}    
                            <i class="fa fa-{{ item.custom_icon }}"></i> 
                        {% elseif item.letter %}
                            <h6>{{ item.letter }}</h6>
                        {% endif %}
                    {% else %}
                        <i class="fa fa-commenting"></i>
                    {% endif %}
                    </div>
                    <!-- TIMELINE CONTENT -->
                    <div class="card timeline-content">
                        <div class="col-md-12 noPaddingLeft">
                            <div class="card-content card-content-noPaddingTop">
                                {{ item.comment_content}}
                                <div class="timeline-info author-info">
                                    <h6 class="author-name">
                                        <small>{{ item.comment_title}}</small>
                                    </h6>
                                    <!-- <h6>
                                        <small><span>Jan 2000 - Mar 2005</span></small>
                                    </h6> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                    {% endif %}

            {% endfor %}
        </div>

    </div>
</section>

